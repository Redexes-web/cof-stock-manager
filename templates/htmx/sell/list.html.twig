    'options': [
        {
            'value': 's.soldAt',
            'label': 'Date décroissante',
            'direction': 'desc'
        },
        {
            'value': 's.soldAt',
            'label': 'Date croissante',
            'direction': 'asc'
        },
        {
            'value': 'p.name',
            'label': 'Nom du produit',
            'direction': 'asc'
        },
        {
            'value': 'p.name',
